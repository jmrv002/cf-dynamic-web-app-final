<div class="row">
  <div class="col s12">
    <img class="materialboxed" width="600" src="<%= @product.image %>">
  </div>
  <div class="col s6">
    <p>Name: <%= @product.name %></p>
  </div>
  <div class="col s6">
    <p>Price: <%= @product.price %></p>
  </div>
  <div class="col s12">
    <span>Categories:</span>
    <% @product.categories.each do |category| %>
      <div class="chip"> <%= category.name %> </div>
    <% end %>    
  </div>
  <div class="col s12">
    <p><%= @product.description %></p>
  </div>
</div>

<div class="fixed-action-btn">
  <%= link_to edit_product_path(@product), :class => "btn-floating btn-large red" do %>
    <i class="large material-icons">mode_edit</i>
  <% end %>
  <ul>
    <li>
      <%= link_to @product, :method => :delete, :class => "btn-floating yellow" do %>
        <i class="material-icons">clear</i>
      <% end %>
    </li>
  </ul>
</div>

<%= render template: "comments/index" %>


